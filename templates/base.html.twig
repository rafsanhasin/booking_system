<!DOCTYPE html>
<html>
    <head>
        {% for flashMessage in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h4 class="alert-heading"></h4>
                <p>{{ flashMessage }}</p>
            </div>
        {% endfor %}

        {% for message in app.flashes('success')%}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/css/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('booking.index') }}">Booking System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('reserve.index') }}">Reservations<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active float-right">
                            <a class="nav-link" href="{{ path('app_logout')}}">logout <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
